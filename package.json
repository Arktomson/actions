{
  "name": "Arktomson/actions",
  "version": "1.0.4",
  "description": "Universal GitHub Actions Toolkit - 实用的 GitHub Actions 工具集，支持 NPM 发布、VS Code 扩展发布、Docker 构建、版本管理和代码质量检查",
  "keywords": [
    "github-actions",
    "vscode",
    "npm",
    "docker",
    "release",
    "publish",
    "automation",
    "ci-cd",
    "code-quality",
    "typescript",
    "javascript"
  ],
  "author": "Arktomson",
  "license": "MIT",
  "devDependencies": {
    "standard-version": "^9.5.0"
  },
  "scripts": {
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:patch": "standard-version --release-as patch",
    "release:prerelease-alpha": "standard-version --prerelease alpha",
    "release:prerelease-beta": "standard-version --prerelease beta",
    "release:prerelease-rc": "standard-version --prerelease rc"
  }
}
